<%- include('../partials/header.ejs') -%>

<div>

    <div class="card">
         <div class="card-header">
             <h3 class="card-title">
                 Cadastro de peças 
             </h3>
         </div>

         <div class="card-body">
              <form action="/pecas/cadastrar" method="post">

                 <label for="codigo">Codigo:</label>
                 <input class="form-control" type="text" name="codigo"><br>

                 <label for="nome">Nome:</label>
                 <input class="form-control" type="text" name="nome"><br>

                 <label for="descricao">Descrição</label>
                 <input class="form-control" type="text" name="descricao"><br>
                 
                 <label for="preco">Preço</label>
                 <input class="form-control" type="preco" name="preco" >

                 <button type="submit" class="btn btn-primary mt-2" >Cadastrar</button>

              </form>
         </div>

         <div class="card-footer">
              <a class="btn btn-primary" href="http://localhost:8080/">Voltar</a>
         </div>
    </div>

    <div class="card">
        <div class="card-header">
             <h3 class="card-title">Lista de peças</h3>
        </div>

        <div class="card-body">

            <ul class="list-group" >
                <% pecas.forEach(peca=>{  %> 
                    <li class="list-group-item" ><%= peca.codigo %> - <%= peca.nome %> - <%= peca.preco %> <span>Detalhes</span></li>
                <% }) %>

            </ul>
             
        </div>



    </div>


</div>
<%- include('../partials/footer.ejs') -%>