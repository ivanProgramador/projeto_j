<%- include('../partials/header.ejs') -%>

<div>

    <div class="card">
         <div class="card-header">
             <h3 class="card-title">
                 Edição de peças 
             </h3>
         </div>

         <div class="card-body">
              <form action="/pecas/editar" method="post">

                 <label for="codigo">Codigo:</label>
                 <input class="form-control" type="text" value="<%= peca.codigo %>" name="codigo"><br>

                 <label for="nome">Nome:</label>
                 <input class="form-control" type="text" name="nome"  value="<%= peca.nome %>" ><br>

                 <label for="descricao">Descrição</label>
                 <input class="form-control" type="text" name="descricao"  value="<%= peca.descricao %>" ><br>
                 
                 <label for="preco">Preço</label>
                 <input class="form-control" type="preco" name="preco"  value="<%= peca.preco %>"  >

                 <button type="submit">Atualizar</button>

              </form>
         </div>
    </div>


</div>
<%- include('../partials/footer.ejs') -%>