<%- include('../partials/header.ejs') -%>

<div style="display: flex;" >


    <div class="card col-md-6">

        <div class="card-header">

            <h3 class="card-title" >Cadastro de tipos </h3>

        </div>
      
         <div class="card-body">

            <form action="/tipos/cadastrar" method="post">

                <label for="codigo">Codigo:</label>
                <input class="form-control" type="text" name="codigo"><br>
        
                <label for="nome">nome:</label>
                <input class="form-control" type="text" name="nome"><br>
        
                <label for="nome">Descrição:</label>
                <input class="form-control" type="text" name="descricao"><br>
        
                <button class="btn btn-primary" type="submit">Cadastrar</button>
        
            </form>

         </div>

         <div class="card-footer">

            <a class="btn btn-primary"  href="http://localhost:8080/">Voltar</a>

         </div>
    
    </div>

    <div class="card col-md-6">
        <div class="card-header">
            <h3>Lista de Tipos</h3>
        </div>

        <div class="card-body">
             <ul class="list-group" >

                <% tipos.forEach(tipo=>{ %>
                      
                    <li class="list-group-item" ><%= tipo.nome %> / <a href="/tipos/edicao/<%= tipo.id %>" class="btn btn-warning" >Editar <a>
                        <form style="display: inline;" action="/tipo/apagar" method="post" >
                             <input type="hidden" value="<%= tipo.id %>" name="id"> 
                             <button type="submit" class="btn btn-danger" >Apagar</button>
                         </form>  </li>

                <%  }) %>
                 
             </ul>
        </div>
    </div>
   

</div>

<%- include('../partials/footer.ejs') -%>